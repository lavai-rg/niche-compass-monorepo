# üåü Niche Compass Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# üîê FLASK CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development

# =============================================================================
# üóÑÔ∏è AZURE COSMOS DB (MONGODB API)
# =============================================================================
# Get from Azure Portal > Cosmos DB > Your Database > Connection String
COSMOS_DB_CONNECTION_STRING=mongodb://username:password@host:port/database?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@appname@
DATABASE_NAME=nichecompass

# Collection names (optional, defaults will be used)
COLLECTION_USERS=users
COLLECTION_NICHES=niches
COLLECTION_PRODUCTS=products
COLLECTION_KEYWORDS=keywords
COLLECTION_STORES=stores

# =============================================================================
# ü§ñ AZURE AI SERVICES
# =============================================================================
# Azure Computer Vision (Image Analysis)
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your-computer-vision-key

# Azure Text Analytics (Sentiment Analysis)
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_KEY=your-text-analytics-key

# Azure OpenAI (Advanced AI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key

# =============================================================================
# üîê AUTH0 CONFIGURATION
# =============================================================================
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=your-api-audience
AUTH0_CALLBACK_URL=http://localhost:3000/callback

# =============================================================================
# üåê EXTERNAL APIs
# =============================================================================
# Etsy API (Get from https://www.etsy.com/developers/)
ETSY_API_KEY=your-etsy-api-key

# =============================================================================
# ‚öôÔ∏è APPLICATION SETTINGS
# =============================================================================
MAX_REQUESTS_PER_MINUTE=100
CACHE_TIMEOUT_SECONDS=3600

# =============================================================================
# üöÄ DEPLOYMENT SETTINGS
# =============================================================================
# Set to 'production' when deploying
NODE_ENV=development
PORT=5000
FRONTEND_PORT=3000
