# ========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# Niche Compass - Local Development Settings
# ========================================
# ⚠️  PERHATIAN: File ini TIDAK akan di-commit ke GitHub
# ⚠️  File ini hanya untuk development lokal

# ========================================
# FLASK APPLICATION SETTINGS
# ========================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production-1234567890
FLASK_APP=backend/src/main.py

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Azure Cosmos DB - Ganti dengan credentials asli Anda
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-db-primary-key-here
AZURE_COSMOS_DATABASE=niche-compass-dev
AZURE_COSMOS_CONTAINER=niche-data

# ========================================
# AZURE AI SERVICES
# ========================================
# Computer Vision - Ganti dengan credentials asli Anda
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_VISION_API_KEY=your-vision-api-key-here

# Text Analytics - Ganti dengan credentials asli Anda
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-text-analytics-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_API_KEY=your-text-analytics-api-key-here

# OpenAI (optional) - Ganti dengan credentials asli Anda
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Auth0 Configuration - Ganti dengan credentials asli Anda
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your-client-id-here
AUTH0_CLIENT_SECRET=your-client-secret-here

# JWT Settings
JWT_SECRET_KEY=dev-jwt-secret-key-change-this-in-production-1234567890
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# ========================================
# EXTERNAL APIs
# ========================================
# Etsy API - Ganti dengan credentials asli Anda
ETSY_API_KEY=your-etsy-api-key-here
ETSY_API_SECRET=your-etsy-api-secret-here
ETSY_SHOP_ID=your-shop-id-here

# Social Media APIs - Ganti dengan credentials asli Anda
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
TWITTER_ACCESS_TOKEN=your-twitter-access-token-here
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret-here

# ========================================
# STORAGE & FILE HANDLING
# ========================================
# Azure Blob Storage - Ganti dengan credentials asli Anda
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string-here
AZURE_STORAGE_CONTAINER=niche-compass-files-dev

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp,tiff,webp

# ========================================
# MONITORING & LOGGING
# ========================================
# Application Insights - Ganti dengan credentials asli Anda
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here

# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/app.log

# ========================================
# PERFORMANCE & SCALING
# ========================================
# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ========================================
# SECURITY HEADERS
# ========================================
# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOW_CREDENTIALS=True

# Security Headers
STRICT_TRANSPORT_SECURITY=False
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# ========================================
# ERROR HANDLING
# ========================================
# Error Reporting
SENTRY_DSN=your-sentry-dsn-here
ERROR_REPORTING_ENABLED=False

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/Disable Features
AI_SERVICES_ENABLED=True
SOCIAL_MEDIA_INTEGRATION_ENABLED=True
REAL_TIME_ANALYTICS_ENABLED=True
ADVANCED_REPORTING_ENABLED=True

# ========================================
# DEPLOYMENT
# ========================================
# Deployment Environment
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=1.0.0-dev
HEALTH_CHECK_ENDPOINT=/api/health

# ========================================
# IMPORTANT NOTES
# ========================================
# 1. File ini TIDAK akan di-commit ke GitHub (sudah di .gitignore)
# 2. Ganti semua placeholder values dengan credentials asli Anda
# 3. Untuk production, gunakan environment variables atau Azure Key Vault
# 4. Jangan share credentials ini dengan siapapun
# 5. Rotate API keys secara berkala untuk keamanan
