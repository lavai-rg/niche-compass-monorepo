# ==============================================
# NICHE COMPASS ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================  
# FLASK CONFIGURATION
# ==============================================
SECRET_KEY=your_super_secret_key_change_in_production
FLASK_ENV=development

# ==============================================
# DATABASE CONFIGURATION (CRITICAL)
# ==============================================
# Azure Cosmos DB with MongoDB API
COSMOS_DB_CONNECTION_STRING=mongodb://your_username:your_password@your_account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&maxIdleTimeMS=120000&appName=@your_account@
DATABASE_NAME=nichecompass

# Collections
COLLECTION_USERS=users
COLLECTION_NICHES=niches  
COLLECTION_PRODUCTS=products
COLLECTION_KEYWORDS=keywords
COLLECTION_STORES=stores

# ==============================================
# AZURE AI SERVICES (HIGH PRIORITY)
# ==============================================
# Computer Vision for image analysis
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_computer_vision_key_here

# Text Analytics for sentiment analysis
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_KEY=your_text_analytics_key_here

# General Cognitive Services (can be same as above)
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COGNITIVE_SERVICES_KEY=your_cognitive_services_key_here

# OpenAI for advanced AI features (optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_openai_key_here

# ==============================================
# EXTERNAL API INTEGRATIONS (CRITICAL)
# ==============================================
# Etsy API for real product data
ETSY_API_KEY=your_etsy_api_key_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
MAX_REQUESTS_PER_MINUTE=100
CACHE_TIMEOUT_SECONDS=3600

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Frontend API base URL
VITE_API_BASE_URL=http://localhost:5000

# ==============================================
# PRODUCTION SETTINGS (when deploying)
# ==============================================
# VITE_API_BASE_URL=https://your-production-api-domain.com
# FLASK_ENV=production