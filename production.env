# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Niche Compass - Production Settings
# ========================================

# ========================================
# FLASK APPLICATION SETTINGS
# ========================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this
FLASK_APP=backend/src/main.py

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Azure Cosmos DB
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-db-primary-key
AZURE_COSMOS_DATABASE=niche-compass-prod
AZURE_COSMOS_CONTAINER=niche-data

# ========================================
# AZURE AI SERVICES
# ========================================
# Computer Vision
AZURE_VISION_ENDPOINT=https://your-vision-resource.cognitiveservices.azure.com/
AZURE_VISION_API_KEY=your-vision-api-key

# Text Analytics
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-text-analytics-resource.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_API_KEY=your-text-analytics-api-key

# OpenAI (if using)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# ========================================
# EXTERNAL APIs
# ========================================
# Etsy API
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_SHOP_ID=your-shop-id

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# ========================================
# STORAGE & FILE HANDLING
# ========================================
# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=niche-compass-files

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,bmp,tiff,webp

# ========================================
# MONITORING & LOGGING
# ========================================
# Application Insights
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/niche-compass/app.log

# ========================================
# PERFORMANCE & SCALING
# ========================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Caching
REDIS_URL=redis://your-redis-instance:6379
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ========================================
# SECURITY HEADERS
# ========================================
# CORS Settings
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=True

# Security Headers
STRICT_TRANSPORT_SECURITY=True
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# ========================================
# ERROR HANDLING
# ========================================
# Error Reporting
SENTRY_DSN=your-sentry-dsn
ERROR_REPORTING_ENABLED=True

# ========================================
# BACKUP & RECOVERY
# ========================================
# Database Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTIFICATIONS
# ========================================
# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/Disable Features
AI_SERVICES_ENABLED=True
SOCIAL_MEDIA_INTEGRATION_ENABLED=True
REAL_TIME_ANALYTICS_ENABLED=True
ADVANCED_REPORTING_ENABLED=True

# ========================================
# DEPLOYMENT
# ========================================
# Deployment Environment
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
HEALTH_CHECK_ENDPOINT=/api/health

# ========================================
# IMPORTANT NOTES
# ========================================
# 1. Change all placeholder values with real production credentials
# 2. Keep this file secure and never commit to version control
# 3. Use environment variables in production deployment
# 4. Regularly rotate API keys and secrets
# 5. Monitor all services for security and performance
